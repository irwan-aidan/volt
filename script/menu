echo -e "\E[44;1;37m             ALL PREMIUM MENU              \E[0m"
echo -e "$merah 1$putih. Menu-Vpn          $biru(SSH/OVPN)"
echo -e "$merah 2$putih. Menu-SHADOWSOCKS  $biru(SS)"
echo -e "$merah 3$putih. Menu-SHADOWSOCKSR $biru(SSR)"
