read -p "   Select from options [1-14]: " Menu
echo -e ""
case $Menu in
		1)
		clear
		menu-vpn
		exit
		;;
		2)
		clear
		menu-ss
		exit
		;;
		3)
		clear
		menu-ssr
		exit
		;;
		4)
		clear
		menu-wg
		exit
		;;
		5)
		clear
		menu-vmess
		exit
		;;
		6)
		clear
		menu-vless
		exit
		;;
		7)
		clear
		menu-xmess
		exit
		;;
		8)
		clear
		menu-xless
		exit
		;;
		9)
		clear
		menu-trojan
		exit
		;;
		10)
		clear
		server
		exit
		;;
		11)
		clear
		options
		exit
		;;
		12)
		clear
		info
		exit
		;;
		13)
		clear
		about
		exit
		;;
		14)
		clear
		banner
		exit
		;;
		15)
		clear
		exit
		;;
	esac
