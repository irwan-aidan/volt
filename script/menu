echo -e "$merah 8$putih. Menu-XRAY/VLESS   $biru(VLESS)\E[0m"
echo -e "$merah 9$putih. Menu-TROJAN/GFW   $biru(TROJAN)\E[0m"
echo -e "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo -e "\E[44;1;37m         SYSTEM NAVIGATOR       \E[0m"
echo -e "$merah 10$putih. SERVER       $biru(SERVER SETTINGS)"
echo -e "$merah 11$putih. OPTIONS      $biru(VPN SETTINGS)"
