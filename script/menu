#!/bin/bash
source /usr/local/sbin/base-script

#Menu
merah="\e[1;31m"
kuning="\e[1;33m"
biru="\e[1;34m"
putih="\e[1;37m"
cyan="\e[1;36m"
clear
ISP=$(curl -s ipinfo.io/org | cut -d " " -f 2-10 )
